<Page x:Class="DesktopApp.Pages.Page6"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Page6"
      >
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar - Updated with modern styling -->
        <Border Background="#F8F9FA" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,1,0"
                CornerRadius="0,12,12,0">
            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Profile Section - Updated styling -->
                <Border CornerRadius="12" 
                        Padding="20" 
                        Background="#F0F4FF" 
                        Margin="0,0,0,30">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Logo -->
                        <Grid Height="38" Width="38">
                            <Viewbox>
                                <Path Data="M90,50 L75,65 L25,65 L10,50 L25,35 L75,35 L90,50 M30,45 A5,5 0 1 1 30,55 A5,5 0 1 1 30,45 M70,45 A5,5 0 1 1 70,55 A5,5 0 1 1 70,45"
                                      Fill="#1a73e8"/>
                            </Viewbox>
                        </Grid>

                        <!-- Text Section -->
                        <StackPanel Grid.Column="1" 
                                    Margin="15,0,0,0" 
                                    VerticalAlignment="Center">
                            <TextBlock Text="Travel Planner" 
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#1a73e8"/>
                            <TextBlock Text="Plan your next adventure" 
                                       FontSize="12"
                                       Foreground="#666666"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Navigation Menu - Updated styling -->
                <ListView x:Name="NavigationMenu" 
                          Background="Transparent" 
                          BorderThickness="0"
                          SelectionMode="Single"
                          SelectionChanged="NavigationMenu_SelectionChanged"
                          Margin="0,0,0,30"
                          Grid.Row="1">

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="16,14"/>
                            <Setter Property="Margin" Value="0,5"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Grid>
                                            <!-- Selection Indicator -->
                                            <Border x:Name="SelectionIndicator"
                                                    Width="4"
                                                    HorizontalAlignment="Left"
                                                    Background="#1a73e8"
                                                    CornerRadius="0,2,2,0"
                                                    Margin="-16,0,0,0"
                                                    Opacity="0"/>

                                            <!-- Main Content -->
                                            <Border x:Name="MainBorder" 
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="10"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="MainBorder" Property="Background" Value="#F0F4FF"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="MainBorder" Property="Background" Value="#E8F0FE"/>
                                                <Setter TargetName="SelectionIndicator" Property="Opacity" Value="1"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>


                    <ListView.Items>
                        <!-- Dashboard - Keeping as selected -->
                        <ListViewItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Dashboard Icon -->
                                <Path Grid.Column="0" 
                                      Data="M3,13h8V3H3V13z M3,21h8v-6H3V21z M13,21h8V11h-8V21z M13,3v6h8V3H13z"
                                      Fill="#666" 
                                      Width="20" 
                                      Height="20"
                                      Stretch="Uniform"/>

                                <TextBlock Grid.Column="1"
                                           Text="Dashboard" 
                                           Margin="16,0,0,0" 
                                           FontSize="14"
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </ListViewItem>

                        <!-- My Information -->
                        <ListViewItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Info Icon -->
                                <Path Grid.Column="0" 
                                      Data="M12,2C6.48,2,2,6.48,2,12s4.48,10,10,10s10-4.48,10-10S17.52,2,12,2z M13,17h-2v-6h2V17z M13,9h-2V7h2V9z"
                                      Fill="#666666" 
                                      Width="20" 
                                      Height="20"
                                      Stretch="Uniform"/>

                                <TextBlock Grid.Column="1"
                                           Text="My Information" 
                                           FontSize="14"
                                           FontWeight="Medium"
                                           Margin="16,0,0,0" 
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </ListViewItem>

                        <!-- Settings -->
                        <ListViewItem IsSelected="True">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Settings Icon -->
                                <Path Grid.Column="0" 
                                      Data="M19.14,12.94c0.04-0.3,0.06-0.61,0.06-0.94c0-0.32-0.02-0.64-0.07-0.94l2.03-1.58c0.18-0.14,0.23-0.41,0.12-0.61 l-1.92-3.32c-0.12-0.22-0.37-0.29-0.59-0.22l-2.39,0.96c-0.5-0.38-1.03-0.7-1.62-0.94L14.4,2.81c-0.04-0.24-0.24-0.41-0.48-0.41 h-3.84c-0.24,0-0.43,0.17-0.47,0.41L9.25,5.35C8.66,5.59,8.12,5.92,7.63,6.29L5.24,5.33c-0.22-0.08-0.47,0-0.59,0.22L2.74,8.87 C2.62,9.08,2.66,9.34,2.86,9.48l2.03,1.58C4.84,11.36,4.8,11.69,4.8,12s0.02,0.64,0.07,0.94l-2.03,1.58 c-0.18,0.14-0.23,0.41-0.12,0.61l1.92,3.32c0.12,0.22,0.37,0.29,0.59,0.22l2.39-0.96c0.5,0.38,1.03,0.7,1.62,0.94l0.36,2.54 c0.05,0.24,0.24,0.41,0.48,0.41h3.84c0.24,0,0.44-0.17,0.47-0.41l0.36-2.54c0.59-0.24,1.13-0.56,1.62-0.94l2.39,0.96 c0.22,0.08,0.47,0,0.59-0.22l1.92-3.32c0.12-0.22,0.07-0.47-0.12-0.61L19.14,12.94z M12,15.6c-1.98,0-3.6-1.62-3.6-3.6 s1.62-3.6,3.6-3.6s3.6,1.62,3.6,3.6S13.98,15.6,12,15.6z"
                                      Fill="#1a73e8" 
                                      Width="20" 
                                      Height="20"
                                      Stretch="Uniform"/>

                                <TextBlock Grid.Column="1"
                                           Text="Settings" 
                                           FontSize="14"
                                           FontWeight="Medium"
                                           Margin="16,0,0,0" 
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </ListViewItem>

                        <!-- Itinerary -->
                        <ListViewItem>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Itinerary Icon -->
                                <Path Grid.Column="0" 
                                      Data="M19,3h-4.18C14.4,1.84,13.3,1,12,1S9.6,1.84,9.18,3H5C3.9,3,3,3.9,3,5v14c0,1.1,0.9,2,2,2h14c1.1,0,2-0.9,2-2V5 C21,3.9,20.1,3,19,3z M12,3c0.55,0,1,0.45,1,1s-0.45,1-1,1s-1-0.45-1-1S11.45,3,12,3z M14,17H7v-2h7V17z M17,13H7v-2h10V13z M17,9H7 V7h10V9z"
                                      Fill="#666666" 
                                      Width="20" 
                                      Height="20"
                                      Stretch="Uniform"/>

                                <TextBlock Grid.Column="1"
                                           Text="Itineraries" 
                                           FontSize="14"
                                           FontWeight="Medium"
                                           Margin="16,0,0,0" 
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </ListViewItem>
                    </ListView.Items>
                </ListView>

                <!-- Logout Button - Updated styling -->
                <Button x:Name="LogoutButton" 
                        Content="Logout" 
                        Background="#FF5252" 
                        Foreground="White" 
                        HorizontalAlignment="Stretch" 
                        Height="46"
                        FontSize="14"
                        FontWeight="SemiBold"
                        VerticalAlignment="Bottom" 
                        Cursor="Hand"
                        Click="LogoutButton_Click"
                        Grid.Row="2">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="23"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>


        <Grid Grid.Column="1" Margin="30,30,10,30">
            <!-- Section Title -->
            <TextBlock Text="Account Settings" 
               FontSize="24" 
               FontWeight="SemiBold" 
               Foreground="#1a73e8"
               Margin="0,0,0,20" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Top" />

            <!-- Delete Account Section -->
            <Border Background="#FFF" 
            BorderBrush="#EAEAEA" 
            BorderThickness="1" 
            CornerRadius="12" 
            Padding="24" 
            VerticalAlignment="Top" 
            Margin="0,60,0,0">
                <StackPanel>
                    <TextBlock Text="Delete Account" 
                      FontSize="18" 
                      FontWeight="SemiBold" 
                      Foreground="#FF5252" />
                    <TextBlock Text="Warning: This action cannot be undone. All your data will be permanently deleted." 
                      TextWrapping="Wrap" 
                      Margin="0,10,0,20" 
                      Foreground="#666666" />
                    <Button x:Name="DeleteAccountButton" 
                   Content="Delete Account" 
                   Width="150" 
                   Height="40" 
                   Background="#FF5252" 
                   Foreground="White" 
                   BorderThickness="0" 
                   Cursor="Hand" 
                   HorizontalAlignment="Left">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                               CornerRadius="20" 
                               BorderBrush="{TemplateBinding BorderBrush}" 
                               BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</Page>
