<Page x:Class="DesktopApp.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Sign Up">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Left side with hero image -->
        <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="3"
                CornerRadius="0,12,12,0" 
                Margin="0,0,0,0" 
                ClipToBounds="True">
            <Grid>
                <Image Source="../Images/hero-image.jpg" 
                       Stretch="UniformToFill"/>
                <Border Background="#4D000000" />
                <!-- Semi-transparent overlay -->
                <StackPanel VerticalAlignment="Bottom" Margin="30,0,0,40">
                    <TextBlock Text="JOIN OUR COMMUNITY" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="Light"/>
                    <TextBlock Text="Create Account" 
                               Foreground="White" 
                               FontSize="42" 
                               FontWeight="Bold" 
                               Margin="0,8,0,8"/>
                    <TextBlock Text="Start planning your adventures" 
                               Foreground="White" 
                               FontSize="16" 
                               FontWeight="Light"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Empty top bar -->
        <Border Grid.Column="1" Grid.Row="0" 
                Background="White"
                Padding="20,20,20,0">
        </Border>

        <!-- Right side with sign up form -->
        <Border Grid.Column="1" Grid.Row="1" 
                Background="White" 
                Padding="40,10,40,10">
            <StackPanel VerticalAlignment="Center">
                <!-- Header -->
                <TextBlock Text="Create an Account"
                           FontSize="24" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,5"/>

                <TextBlock 
                           Margin="0,0,0,25">
                    <TextBlock.Inlines>
                        <Run Text="Already have an account? "/>
                        <Hyperlink NavigateUri="Pages/Page2.xaml" RequestNavigate="Hyperlink_RequestNavigate">
                            <Run Text="Log in"/>
                        </Hyperlink>
                    </TextBlock.Inlines>
                </TextBlock>

                <!-- Username -->
                <TextBlock Text="Username" 
                           Foreground="#444444" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>

                <Border BorderBrush="#E0E0E0" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Margin="0,0,0,15">
                    <TextBox x:Name="UsernameTextBox" 
                             Background="Transparent" 
                             BorderThickness="0" 
                             Padding="12,10" 
                             FontSize="14"/>
                </Border>

                <!-- Email -->
                <TextBlock Text="Email Address" 
                           Foreground="#444444" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>

                <Border BorderBrush="#E0E0E0" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Margin="0,0,0,15">
                    <TextBox x:Name="EmailBox" 
                             Background="Transparent" 
                             BorderThickness="0" 
                             Padding="12,10" 
                             FontSize="14"/>
                </Border>

                <!-- Password -->
                <TextBlock Text="Password" 
                           Foreground="#444444" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>

                <Border BorderBrush="#E0E0E0" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Margin="0,0,0,5">
                    <PasswordBox x:Name="PasswordBox" 
                                Background="Transparent" 
                                BorderThickness="0" 
                                Padding="12,10" 
                                FontSize="14"/>
                </Border>

                <TextBlock Text="Use 4 or more characters" 
                           Foreground="#666666" 
                           FontSize="12" 
                           Margin="0,0,0,25"/>

                <!-- Create Account Button -->
                <Button Content="Create Account" 
                        Background="#1a73e8" 
                        Foreground="White" 
                        Height="46" 
                        FontSize="14" 
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CreateAnAccount_Click"
                        Margin="0,0,0,20">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="23"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>

        <!-- Footer -->
        <Border Grid.Column="1" Grid.Row="2" 
                Background="White"
                Padding="20,15,20,15">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="© 2025 Travel Planner App" 
                           Foreground="#666666" 
                           FontSize="12" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>

