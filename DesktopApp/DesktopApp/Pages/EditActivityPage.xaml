<Page x:Class="DesktopApp.Pages.EditActivityPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Edit Activity">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#F8F9FA" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,1,0"
                CornerRadius="0,12,12,0">
            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

               
                <Border CornerRadius="12" 
                        Padding="20" 
                        Background="#F0F4FF" 
                        Margin="0,0,0,30">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        
                        <Grid Height="38" Width="38">
                            <Viewbox>
                                <Path Data="M90,50 L75,65 L25,65 L10,50 L25,35 L75,35 L90,50 M30,45 A5,5 0 1 1 30,55 A5,5 0 1 1 30,45 M70,45 A5,5 0 1 1 70,55 A5,5 0 1 1 70,45"
                                      Fill="#1a73e8"/>
                            </Viewbox>
                        </Grid>

                        
                        <StackPanel Grid.Column="1" 
                                    Margin="15,0,0,0" 
                                    VerticalAlignment="Center">
                            <TextBlock Text="Travel Planner" 
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#1a73e8"/>
                            <TextBlock Text="Plan your next adventure" 
                                       FontSize="12"
                                       Foreground="#666666"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

               
                <Border Grid.Row="1"
                        VerticalAlignment="Top"
                        Background="White"
                        CornerRadius="12"
                        Padding="20"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                    <StackPanel>
                        <TextBlock Text="Edit Activity" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,15" 
                                   Foreground="#1a73e8"/>

                        <TextBlock Text="Update your activity details or delete if no longer needed" 
                                   TextWrapping="Wrap"
                                   FontSize="14"
                                   Foreground="#666666" 
                                   Margin="0,0,0,20"/>
                    </StackPanel>
                </Border>

                
                <Button Grid.Row="2"
                        x:Name="CancelButton"
                        Content="← Cancel" 
                        Click="CancelButton_Click" 
                        HorizontalAlignment="Stretch"
                        Height="46"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="White" 
                        Foreground="#1a73e8" 
                        BorderThickness="1"
                        BorderBrush="#1a73e8"
                        Cursor="Hand"
                        Margin="0,0,0,15">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="23"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Grid.Row="3"
                        x:Name="DeleteActivityButton"
                        Content="Delete Activity" 
                        Click="DeleteActivityButton_Click" 
                        HorizontalAlignment="Stretch"
                        Height="46"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#ff4d4f" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="23"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            
            <Border Background="White" Padding="30,30,30,15">
                <TextBlock Text="Activity Details" 
                          FontSize="24" 
                          FontWeight="SemiBold" 
                          Foreground="#1a73e8"/>
            </Border>

           
            <Border Grid.Row="1" 
                    Background="White" 
                    Margin="30,0,30,30"
                    Padding="30"
                    CornerRadius="12"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    
                    <TextBlock Text="Title:" 
                               Grid.Row="0" 
                               Grid.Column="0" 
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"/>
                    <TextBox x:Name="TitleTextBox" 
                             Grid.Row="0" 
                             Grid.Column="1" 
                             Padding="10"
                             Margin="0,0,0,15"
                             BorderThickness="1"
                             BorderBrush="#E0E0E0"/>

                    
                    <TextBlock Text="Category:" 
                               Grid.Row="1" 
                               Grid.Column="0" 
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"/>
                    <ComboBox x:Name="CategoryComboBox" 
                              Grid.Row="1" 
                              Grid.Column="1"
                              Padding="10"
                              Margin="0,0,0,15">
                        <ComboBoxItem Content="Sightseeing"/>
                        <ComboBoxItem Content="Food"/>
                        <ComboBoxItem Content="Shopping"/>
                        <ComboBoxItem Content="Adventure"/>
                        <ComboBoxItem Content="Entertainment"/>
                        <ComboBoxItem Content="Transportation"/>
                        <ComboBoxItem Content="Other"/>
                    </ComboBox>

                    
                    <TextBlock Text="Location:" 
                               Grid.Row="2" 
                               Grid.Column="0" 
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"/>
                    <TextBox x:Name="LocationTextBox" 
                             Grid.Row="2" 
                             Grid.Column="1" 
                             Padding="10"
                             Margin="0,0,0,15"
                             BorderThickness="1"
                             BorderBrush="#E0E0E0"/>

                    
                    <TextBlock Text="Start Time:" 
                               Grid.Row="3" 
                               Grid.Column="0" 
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"/>
                    <TextBox x:Name="StartTimeTextBox" 
                             Grid.Row="3" 
                             Grid.Column="1" 
                             Padding="10"
                             Margin="0,0,0,15"
                             BorderThickness="1"
                             BorderBrush="#E0E0E0"/>

                    
                    <TextBlock Text="End Time:" 
                               Grid.Row="4" 
                               Grid.Column="0" 
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Margin="0,0,0,0"/>
                    <TextBox x:Name="EndTimeTextBox" 
                             Grid.Row="4" 
                             Grid.Column="1" 
                             Padding="10"
                             Margin="0,0,0,0"
                             BorderThickness="1"
                             BorderBrush="#E0E0E0"/>
                </Grid>
            </Border>

            
            <Button Grid.Row="2"
                    x:Name="UpdateActivityButton"
                    Content="Update Activity" 
                    Click="UpdateActivityButton_Click" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Height="50"
                    Width="200"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Background="#1a73e8" 
                    Foreground="White" 
                    BorderThickness="0" 
                    Cursor="Hand"
                    Margin="0,0,30,30">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="25"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Page>

