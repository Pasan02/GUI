<Page x:Class="DesktopApp.Pages.Page8"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Activity Planner">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar - Using consistent design from Page3 -->
        <Border Background="#F8F9FA" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,1,0"
                CornerRadius="0,12,12,0">
            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Profile Section -->
                <Border CornerRadius="12" 
                        Padding="20" 
                        Background="#F0F4FF" 
                        Margin="0,0,0,30">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Logo -->
                        <Grid Height="38" Width="38">
                            <Viewbox>
                                <Path Data="M90,50 L75,65 L25,65 L10,50 L25,35 L75,35 L90,50 M30,45 A5,5 0 1 1 30,55 A5,5 0 1 1 30,45 M70,45 A5,5 0 1 1 70,55 A5,5 0 1 1 70,45"
                                      Fill="#1a73e8"/>
                            </Viewbox>
                        </Grid>

                        <!-- Text Section -->
                        <StackPanel Grid.Column="1" 
                                    Margin="15,0,0,0" 
                                    VerticalAlignment="Center">
                            <TextBlock Text="Travel Planner" 
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#1a73e8"/>
                            <TextBlock Text="Plan your next adventure" 
                                       FontSize="12"
                                       Foreground="#666666"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Trip Info Box -->
                <Border Grid.Row="1"
                        VerticalAlignment="Top"
                        Background="White"
                        CornerRadius="12"
                        Padding="20"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                    <StackPanel>
                        <TextBlock Text="Activity Planning" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,15" 
                                   Foreground="#1a73e8"/>

                        <TextBlock Text="Plan activities for each day of your trip" 
                                   TextWrapping="Wrap"
                                   FontSize="14"
                                   Foreground="#666666" 
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="Tips:" 
                                   FontWeight="SemiBold"
                                   FontSize="14" 
                                   Margin="0,0,0,5"/>

                        <TextBlock Text="• Add activities for each day"
                                   TextWrapping="Wrap"
                                   FontSize="13"
                                   Foreground="#666666" 
                                   Margin="0,0,0,5"/>

                        <TextBlock Text="• Include time slots for activities"
                                   TextWrapping="Wrap"
                                   FontSize="13"
                                   Foreground="#666666" 
                                   Margin="0,0,0,5"/>

                        <TextBlock Text="• Don't overpack your schedule"
                                   TextWrapping="Wrap"
                                   FontSize="13"
                                   Foreground="#666666" 
                                   Margin="0,0,0,5"/>
                    </StackPanel>
                </Border>

                <!-- Back Button -->
                <Button Grid.Row="2"
        x:Name="BackButton"
        Content="← Back" 
        Click="BackButton_Click" 
        HorizontalAlignment="Stretch"
        Height="46"
        FontSize="14"
        FontWeight="SemiBold"
        Background="White" 
        Foreground="#1a73e8" 
        BorderThickness="1"
        BorderBrush="#1a73e8"
        Cursor="Hand"
        Margin="0,0,0,15">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="23"/>
                        </Style>
                    </Button.Resources>
                </Button>


                <!-- Save Button -->
                <Button Grid.Row="3"
                        x:Name="SaveActivitiesButton"
                        Content="Save Activities" 
                        Click="SaveActivitiesButton_Click" 
                        HorizontalAlignment="Stretch"
                        Height="46"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#1a73e8" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="23"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Border Background="White" Padding="30,30,30,15">
                <TextBlock Text="Day-wise Activities Planner" 
                          FontSize="24" 
                          FontWeight="SemiBold" 
                          Foreground="#1a73e8"/>
            </Border>

            <!-- Tab Control with Modern Styling -->
            <Border Grid.Row="1" 
                    Background="White" 
                    Margin="30,0,30,30"
                    CornerRadius="12"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1">

               

                <TabControl x:Name="DayTabs" 
                            BorderThickness="0"
                            Background="Transparent"
                            Padding="10">
                    <TabControl.Resources>
                        <!-- Tab Styling -->
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border x:Name="Border" 
                                                BorderThickness="0,0,0,2"
                                                BorderBrush="Transparent"
                                                Padding="15,10"
                                                Margin="0,0,5,0">
                                            <ContentPresenter x:Name="ContentSite"
                                                              ContentSource="Header"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="BorderBrush" Value="#1a73e8"/>
                                                <Setter Property="Foreground" Value="#1a73e8"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="False">
                                                <Setter Property="Foreground" Value="#666666"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#F0F4FF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <!-- Button Style for + Add Activity -->
                        <Style x:Key="AddActivityButtonStyle" TargetType="Button">
                            <Setter Property="Background" Value="#1a73e8"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Padding" Value="15,8"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#1565C0"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <!-- Activity Card Style -->
                        <Style x:Key="ActivityCardStyle" TargetType="Border">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="CornerRadius" Value="10"/>
                            <Setter Property="Padding" Value="15"/>
                            <Setter Property="Margin" Value="0,8"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F8F9FA"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TabControl.Resources>
                    <!-- Tabs dynamically populated in code-behind -->
                </TabControl>
            </Border>
        </Grid>
    </Grid>
</Page>

