<Page x:Class="DesktopApp.Pages.Page7"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DesktopApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page7"
      >

    <Page.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E5E5"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="MaxWidth" Value="350"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E5E5"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="MaxWidth" Value="350"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E5E5"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </Style.Resources>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Center content grid -->
        <Grid Grid.Column="1" Width="350" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Plan a New Trip" 
                     FontSize="24" 
                     FontWeight="Bold"
                     Margin="0,0,0,20"
                     HorizontalAlignment="Center"/>

            <StackPanel Grid.Row="1">
                <TextBlock Text="Enter Trip Name" 
                         Foreground="#4B5563"/>
                <TextBox x:Name="TripNameTextBox"/>

                <TextBlock Text="Start Date" 
                         Foreground="#4B5563"/>
                <DatePicker x:Name="StartDatePicker"/>

                <TextBlock Text="End Date" 
                         Foreground="#4B5563"/>
                <DatePicker x:Name="EndDatePicker"/>

                <TextBlock Text="Trip Cost" 
                         Foreground="#4B5563"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="CostTextBox" 
                            Grid.Column="0"
                            Margin="0,5,10,15"/>

                    <ComboBox x:Name="CurrencyComboBox" 
                             Grid.Column="1"
                             SelectedIndex="0">
                        <ComboBoxItem Content="USD"/>
                        <ComboBoxItem Content="EUR"/>
                        <ComboBoxItem Content="GBP"/>
                    </ComboBox>
                </Grid>
            </StackPanel>

            <Button Grid.Row="2" 
                    Content="Save Trip"
                    >
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M17 3H5C3.89 3 3 3.9 3 5V19C3 20.1 3.89 21 5 21H19C20.1 21 21 20.1 21 19V7L17 3ZM12 19C10.34 19 9 17.66 9 16C9 14.34 10.34 13 12 13C13.66 13 15 14.34 15 16C15 17.66 13.66 19 12 19ZM13 9H7V5H13V9Z"
                                  Fill="White"
                                  Width="16"
                                  Height="16"
                                  Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding}"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </Grid>
    </Grid>
</Page>
